generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Condominio {
  condominioid   Int        @id @default(autoincrement())
  nomecondominio String
  endereco       String
  telefone       String
  Clientes       Clientes[]
}

model Clientes {
  clienteid    Int           @id @default(autoincrement())
  apartamento  String
  nome         String
  cpf          String        @unique
  CondominioID Int
  Condominio   Condominio    @relation(fields: [CondominioID], references: [condominioid])
  ocorrencias  ocorrencias[]
  reservas     reservas[]
  assembleia   assembleia[]
}

model ocorrencias {
  ocorrenciasid Int      @id @default(autoincrement())
  ClienteID     Int
  Cliente       Clientes @relation(fields: [ClienteID], references: [clienteid])
  descricao     String
  datacriado    String
}

model reservas {
  reservaid   Int      @id @default(autoincrement())
  ClienteID   Int
  Cliente     Clientes @relation(fields: [ClienteID], references: [clienteid])
  datareserva String
  local       String
}

model assembleia {
  assembleiaid Int      @id @default(autoincrement())
  ClienteID    Int
  Cliente      Clientes @relation(fields: [ClienteID], references: [clienteid])
  descricao    String
}

model comunicados {
  comunicadosid  Int    @id @default(autoincrement())
  datacomunicado String
  descricao      String
}

model prestacaocontas {
  pretacaoid Int    @id @default(autoincrement())
  documento  String
  mes        String
}
